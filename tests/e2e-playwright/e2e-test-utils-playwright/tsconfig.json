{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"incremental": false,
		"composite": false,
		"module": "CommonJS",
		"types": [ "node" ],
		"rootDir": "src",
		"noEmit": false,
		"outDir": "build",
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "build-types",
		"emitDeclarationOnly": false,
		"allowJs": true,
		"checkJs": false
	},
	"include": [ "src/**/*" ]
}
